{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "dev",
            "restart": false,
            "cwd": "${workspaceRoot}",
            "args": ["./node_modules/.bin/uron-fullstack-dev","|","bunyan","-L"],
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "*,-babel",
                "NODE_ENV": "development",
                "DEBUG_COLORS": "true",
                "FORCE_COLOR": "1"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "start",
            "restart": false,
            "cwd": "${workspaceRoot}",
            "args": ["./node_modules/.bin/uron-fullstack-start","|","bunyan","-L"],
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "*,-babel",
                "NODE_ENV": "production",
                "DEBUG_COLORS": "true",
                "FORCE_COLOR": "1",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "build",
            "restart": false,
            "cwd": "${workspaceRoot}",
            "args": ["./node_modules/.bin/uron-fullstack-build"],
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "*,-babel",
                "NODE_ENV": "production",
                "DEBUG_COLORS": "true",
                "FORCE_COLOR": "1",
            }
        },
        {
            "name": "nodemon",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "program": "${file}",
            "restart": true,
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}
